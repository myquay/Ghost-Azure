<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <httpErrors existingResponse="PassThrough" />
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <!-- make sure all the old blog links still work -->
        <rule name="LegacyBlogPost" stopProcessing="true">
          <match url="Blog/(.*)" />
          <conditions>
              <add input="{HTTP_HOST}" pattern="^michael-mckenna\.com$" />
          </conditions>
          <action type="Redirect" redirectType="Permanent"  url="/{R:1}" appendQueryString="true" />
        </rule>
        <!-- for SEO the www is stripped from the URL. -->
        <rule name="CanonicalHostName." stopProcessing="true">
            <match url="(.*)" />
            <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                <add input="{HTTP_HOST}" pattern="^michael-mckenna\.com$" negate="true" />
            </conditions>
            <action type="Redirect" url="http://michael-mckenna.com/{R:1}" />
        </rule>
        <!-- Existing ghost rules -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="index.js"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
